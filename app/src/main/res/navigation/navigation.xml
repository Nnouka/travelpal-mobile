<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_host"
    android:label="@string/app_name"
    app:startDestination="@id/mapsActivity">

    <activity
        android:id="@+id/mapsActivity"
        android:name="com.nouks.travelpal.maps.MapsActivity"
        android:label="MapsActivity" >
        <action
            android:id="@+id/action_mapsActivity_to_detailsActivity"
            app:destination="@id/detailsActivity" />
        <action
            android:id="@+id/action_mapsActivity_to_loginActivity"
            app:destination="@id/loginActivity" />
    </activity>
    <activity
        android:id="@+id/detailsActivity"
        android:name="com.nouks.travelpal.details.DetailsActivity"
        android:label="activity_details"
        tools:layout="@layout/activity_details" />
    <activity
        android:id="@+id/loginActivity"
        android:name="com.nouks.travelpal.ui.login.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
</navigation>